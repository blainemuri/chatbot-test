// Default Sizing Variables
space-x-small = .6em
space-small = .8em
space = 1em
space-medium = 1.2em
space-large = 1.4em
space-x-large = 1.6em
nudge = .2em

nav-height = space*6
// The left nav
title-width = nav-height*3
profile-size = space*2
log-width = space*18
log-height = space*22
input-height = space*8

// Default Colors
light-grey = #f5f5f5
medium-grey = #e8e8e8
turqoise = #27eab2

// Font Faces
@font-face
  font-family CircularPro-Bold
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Bold.otf")

@font-face
  font-family CircularPro-Medium
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Medium.otf")

@font-face
  font-family CircularPro-Book
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Book.otf")

@font-face
  font-family MillerDisplay
  src url("/assets/Originate_Brand_Fonts/Miller\ Display\ Family/Font\ Bureau\ -\ MillerDisplay-Roman.otf")

// Default DOM styling

*
  display: block
  box-sizing: border-box
  font-family: CircularPro-Book
  position: relative
  font-weight: normal

body
  overflow: hidden

.main
  position: fixed
  width: 100%
  height: 100%
  padding: 0
  margin: 0
  background-color: light-grey

responsiveWidth()
  width: 960px
  @media screen and (max-width: 960px)
    width: 100%
