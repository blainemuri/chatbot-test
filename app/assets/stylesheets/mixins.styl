// Default Sizing Variables
space-x-small = .6em
space-small = .8em
space = 1em
space-medium = 1.2em
space-large = 1.4em
space-x-large = 1.6em
nudge = .2em

nav-height = space*6.1
// The left nav
title-width = nav-height*3

// Default Colors
light-grey = #eeeeee
medium-grey = #d9d9d9
dark-grey = #595959
off-black = #1c1c1c

// Font Faces
@font-face
  font-family CircularPro-Bold
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Bold.otf")

@font-face
  font-family CircularPro-Medium
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Medium.otf")

@font-face
  font-family CircularPro-Book
  src url("/assets/Originate_Brand_Fonts/Circular/CircularPro-Book.otf")

@font-face
  font-family MillerDisplay
  src url("/assets/Originate_Brand_Fonts/Miller\ Display\ Family/Font\ Bureau\ -\ MillerDisplay-Roman.otf")

// Default DOM styling

*
  display: block
  box-sizing: border-box
  font-family: CircularPro-Book
  position: relative
  font-weight: normal

body
  overflow: hidden
