@import 'mixins.styl'

button-width = space*4.7

.main
  position: fixed
  top: 0
  right: 0
  transition: right .15s ease-out

.bot-submit
  width: button-width
  color: turqoise
  height: space*3
  border: 1px solid turqoise
  border-radius: 2px
  background-color: turqoise
  color: white
  font-weight: bold
  font-size: space*.9
  float: right
  margin: space 0

#chat-menu
  width: 100%
  height: nav-height
  position: fixed
  top: 0
  left: 0
  z-index: 1000
  border-bottom: 1px solid medium-grey
  text-align: center
  background-color: white

  #bot-logo-svg
    height: nav-height*.6
    position: absolute
    left: 50%
    top: 50%
    transform: translateX(-50%)
    margin-top: nav-height*.2
    background-color: transparent
    border-radius: 20px

  .bot-shadow
    width: space*3
    position: absolute
    left: 50%
    margin-top: (nav-height*.8)
    transform: translateX(-50%)

  .more
    width: space*1.5
    height: space*1.5
    background-color: turqoise
    color: white
    border-radius: space
    line-height: space*1.5
    position: absolute
    top: "calc(%s - %s)" % (nav-height*.5 space*.75)
    right: 0
    margin-right: space*2
    cursor: pointer

#right-menu
  width: menu-width
  max-width: 100%
  position: fixed
  right: - menu-width
  top: 0
  height: 100%
  background-color: white
  z-index: 100000
  overflow-y: scroll /* has to be scroll, not auto */
  -webkit-overflow-scrolling: touch
  transition: all .3s ease-in-out
  // opacity: 0
  &.show
    right: 0
    // opacity: 1
  @media screen and (max-width: mobile)
    top: 100%
    right: 0
    width: 100%
    // opacity: .4
    &.show
      top: 0
      // opacity: 1
      svg
        transform: translateX(-50%) translateY(0px)

  svg
    width: 25%
    margin-top: nav-height*.75
    left: 50%
    transform: translateX(-50%)
    margin-bottom: space*2
    transition: all .5s ease-out
    @media screen and (max-width: mobile)
      transform: translateX(-50%) translateY(50%)

  .bot-shadow
    margin-top: (nav-height*.2)

  .close
    width: space*1.5
    height: space*1.5
    line-height: space*1.1
    position: absolute
    top: "calc(%s - %s)" % (nav-height*.5 space*.75)
    right: 0
    margin-right: space*2
    cursor: pointer
    border: 2px solid turqoise
    border-radius: space*.75
    color: turqoise
    text-align: center

  .analytics
    width: 100%
    padding: 0 space*2
    float: left

    .title, .analytic
      width: 100%
      height: space*3.5
      line-height: space*3.5
      border-bottom: 1px solid medium-grey
      font-size: space*.9

    .analytic
      height: space*3
      line-height: space*3
      font-weight: normal

      span
        float: left

      div
        float: right

    .user-feedback
      margin-top: space*2
      width: 100%
      float: left

      .title
        font-size: space*.9

      textarea
        width: 100%
        height: nav-height*1.5
        resize: none
        border: 1px solid medium-grey
        font-size: space
        line-height: space
        max-height: nav-height*1.5
        border-top: none
        padding: space*.5

    .user-email
      margin-top: space*2
      width: 100%
      float: left

      input
        width: 100%
        font-size: space*.8
        border-bottom: 1px solid turqoise
        &:focus
          font-size: space*.8


