@import 'params.styl'

#chat-menu
  width 100%
  position fixed
  top 0
  left 0
  height nav-height
  background-color transparent
  color black
  border-bottom 1px solid grey-light
  box-sizing border-box
  line-height nav-height
  font-size header-font
  font-family MillerDisplay
  padding 0 main-padding
  z-index 1

  .blur
    z-index -1
    width 100%
    height 100%
    position absolute
    opacity .8
    background-filter: blur(10px)
    -webkit-background-filter: blur(10px)
    filter: blur(10px);
    -webkit-filter: blur(10px);
    -moz-filter: blur(10px);
    -o-filter: blur(10px);
    -ms-filter: blur(10px);
    filter: url(#blur)
    filter: "progid:DXImageTransform.Microsoft.Blur(PixelRadius='10')"
    overflow hidden
    &:after
      background: rgba(255, 255, 255, .2)
      position absolute

  .time
    position absolute
    left 50%
    transform translateX(-50%)
    font-size space-small
    color grey-middle
    font-family CircularPro-Book

  .profile
    width space*13
    line-height nav-height
    height nav-height
    box-sizing border-box
    transition border .3s ease-in-out
    position absolute
    right main-padding
    z-index 1
    transition all .3s ease-in-out
    &.selected
      box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.15)

    .profile-options
      width space*13
      height nav-height
      box-sizing border-box
      cursor pointer
      transition border .3s ease-in-out
      // &.selected
      //   border 1px solid grey-middle

      .right
        float right
        width space*9
        height "calc(%s - 2px)" % nav-height
        cursor pointer
        background-color white

        span
          font-size space-small
          color grey-middle
          float right
          font-family CircularPro-Book
          transition color .3s ease-in-out
          letter-spacing -0px
          padding-right space*.5
          &.selected
            color pale-turqoise

        #down-arrow
          float right
          height space
          width space*1.5
          margin-top space*1.5
          fill grey-middle
          transition all .3s ease-in-out
          margin-right space
          &.selected
            fill pale-turqoise
            transform rotate(180deg)

    .option
      position absolute
      top 0
      left 0
      width space*13
      line-height nav-height*.75
      background-color white
      font-family CircularPro-Book
      font-size space-small
      color black
      text-align right
      padding-right space*3
      box-sizing border-box
      cursor pointer
      z-index -1
      transition all .3s ease-in-out
      &.selected-1
        top "calc(%s - 1px)" % nav-height
        box-shadow 0px 5px 10px 0px rgba(0, 0, 0, 0.15)
      &.selected-2
        top "calc(%s + ((%s * .75) * 1) - 1px)" % (nav-height nav-height)
        box-shadow 0px 7px 10px 0px rgba(0, 0, 0, 0.15)
      &.selected-3
        top "calc(%s + ((%s * .75) * 2) - 1px)" % (nav-height nav-height)
        box-shadow 0px 7px 10px 0px rgba(0, 0, 0, 0.15)
      &.selected-4
        top "calc(%s + ((%s * .75) * 3) - 1px)" % (nav-height nav-height)
        box-shadow 0px 7px 10px 0px rgba(0, 0, 0, 0.15)
      &:hover
        color pale-turqoise

    img
      float left
      width space*2
      height space*2
      border-radius space
      margin-top space
      margin-left space

  .admin-options
    float right
    margin-right space*14

    .chat-btn
      width space*8
      height nav-height
      float right
      line-height nav-height
      text-align center
      box-sizing border-box
      cursor pointer
      transition background-color .2s ease-in-out
      color grey-middle
      font-family CircularPro-Book
      font-size 13px
      &.active
        color pale-turqoise
      &:hover
        color pale-turqoise
    // &:nth-child(4)
    //   background-color pastel-blue-1
    // &:nth-child(3)
    //   background-color pastel-blue-2
    // &:nth-child(2)
    //   background-color pastel-blue-3
    // &:nth-child(1)
    //   background-color pastel-blue-4

  .chat-logo
    float left
    width space*15
    height nav-height

    .chat-botler
      width nav-height
      height nav-height
      float left

  .chat-header
    height nav-height
    float left
    width space*10
    text-align center
    box-sizing border-box
    font-size space*1.5

svg.profile
  width profile-size*2
  height profile-size*2
  border-radius profile-size
  margin 0
  padding 0

  .cls-1
    fill white

  .cls-2
    fill none
    stroke black
    stroke-width 0.44px
