@import 'mixins.styl'

heading-height = space*3

#botler
  width: 100%
  height: 100%

  .left-nav
    width: title-width
    background-color: off-black
    height: 100%
    color: white

    .inner-nav
      width: 100%
      padding-left: space*3

      .heading
        font-size: space*1.2
        font-weight: lighter
        width: 100%
        float: left
        height: heading-height
        line-height: heading-height
        font-family: CircularPro-Book

      .line
        margin-top: space
        margin-bottom: space
        width: space*2
        height: 0
        border: 1px solid white
        float: left

      .bot
        margin-top: space
        width: 100%
        float: left

        .title-wrapper
          width: 100%
          float: left
          line-height: space*2

          .title
            font-size: space*1.2
            float: left

          img
            width: 15px
            stroke: white
            fill: white
            position: absolute
            right: space
            top: 50%
            transform: translateY(-50%)

        .options
          font-size: space
          line-height: space*1.8
          float: left
          width: 100%
          padding-left: space
